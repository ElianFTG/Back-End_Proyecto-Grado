            "url": {
              "raw": "{{baseUrl}}/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "login"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const body = pm.response.json();",
                  "if (body && body.token && body.token.accessToken) {",
                  "  pm.environment.set('token', body.token.accessToken);",
                  "  pm.test('Token saved', () => pm.expect(body.token.accessToken).to.be.a('string'));",
                  "} else {",
                  "  pm.test('Login returned token', () => pm.expect.fail('No token in response'));",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
